#:kivy 2.2.1

<DownloadIcon>
    icon : "download-circle-outline"
    on_press: app.get_itag()
    on_release: app.clear_streams()


MDFloatLayout:
    MDLabel:
        pos_hint: {'y': 0.9}
        size_hint: 1, 0.1
        text: '[b]Download UTube file[/b]'
        halign:'center'
        markup: True
#        md_bg_color: app.theme_cls.primary_color
        color: app.theme_cls.primary_color
    MDTextField:
        pos_hint: {'x': 0.1, 'y': 0.8}
        size_hint_x: 0.8
        id: get_url_input
        text: 'https://www.youtube.com/watch?v=q173FBKFnbI'
        hint_text: "URL to check:"
        helper_text: "This is the URL from your current opened browser tab"
        helper_text_mode: "persistent"
        max_text_length: 80
    MDIconButton:
        pos_hint: {'x': 0.86, 'y': 0.81}
        icon: 'check-circle-outline'
        on_press: loading_label.text = 'Loading streams...'
        on_release: app.get_streams()
    MDLabel:
        pos_hint: {'y': 0.71}
        size_hint: 1, 0.1
        id: loading_label
        text: ''
        halign:'center'
        font_size: 14
        theme_text_color: 'Custom'
        text_color: 1, 0.655, 0, 1

    BoxLayout:
        pos_hint: {'x': 0.1,'top': 0.75}
        size_hint: 0.8, 0.5
        orientation: 'vertical'
        MDScrollView:
            MDList:
                id: streams_list
